# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
# For local development: mongodb://localhost:27017/polychat9
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/polychat9
MONGO_URI=your_mongo_uri

# JWT Configuration
# Generate a strong secret key for JWT token signing
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET_KEY=your_jwt_secret

# Stream Chat Configuration
# Get these from https://getstream.io/dashboard/
# Note: The same API key should be used in frontend/.env as VITE_STREAM_API_KEY
STREAM_API_KEY=your_stream_api_key
STREAM_API_SECRET=your_stream_api_secret

# Firebase Configuration
# For Firebase Admin SDK - you can use application default credentials or service account
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# LinkedIn OAuth Configuration
# Get these from https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:5173